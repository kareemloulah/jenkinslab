pipeline {
    agent any
    stages {
        stage('getcode') {
            steps {
                checkout scm
            }
        }
        stage('build') {
            steps {
                script {
                    def appimage = docker.build("nodeapp:${env.BUILD_NUMBER}")
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    appimage.run("-p 3000:3000")
                }
            }
        }
    }
}