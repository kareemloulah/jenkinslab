pipeline {
    agent any
    stages {
        stage('getcode') {
            steps {
                checkout scm
            }
        }
        stage('build') {
            steps {
                script {
                    def appimage = docker.build("nodeapp:${env.BUILD_NUMBER}")
                }
            }
        }
        stage('deploy') {
            steps {
                sh "docker run -p 3000:3000 nodeapp:${env.BUILD_NUMBER}"
            }
        }
    }
}