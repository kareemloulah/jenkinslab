pipeline {
    agent any
    stages {
        stage('getcode') {
            steps {
                checkout scm
            }
        }
        stage('build') {
            steps {
                script {
                    def appimage = docker.build("nodeapp:${env.BUILD_NUMBER}")
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    docker.run("nodeapp:${env.BUILD_NUMBER}")
                }
            }
        }
    }
}