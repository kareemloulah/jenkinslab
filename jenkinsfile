pipeline {
    agent any
    stages {
        stage('getcode') {
            steps {
                git branch: 'main', url: 'https://github.com/kareemloulah/jenkinslab.git'
            }
        }
        stage('build') {
            steps {
                script {
                    def appimage = docker.build "loulah/nodeapp:${env.BUILD_NUMBER}"
                    
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    appimage.run("-p 3000:3000")
                }
            }
        }
    }
}